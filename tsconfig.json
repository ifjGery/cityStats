{
  "compilerOptions": {
      "esModuleInterop": true,
      "isolatedModules": true,
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "jsx": "react",
      "lib": ["dom", "es2015"],
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
          "*": ["./node_modules/*"],
          "Component/*": ["./src/components/*"],
          "Helper/*": ["./src/helper/*"]
      }
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "./declarations.d.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}